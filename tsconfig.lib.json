{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "module": "CommonJS",
    "target": "ES2017",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
